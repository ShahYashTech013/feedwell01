    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
            text-align: center;
            overflow-x: hidden;
            animation: fadeInBody 1.5s ease-in-out;
        }

        header {
            background-color: #28a745;
            color: white;
            padding: 20px;
            font-size: 24px;
            animation: fadeInDown 1s ease-in-out;
        }

        section {
            margin-top: 60px;
            padding: 20px;
            animation: fadeInUp 1s ease-in-out;
        }

        .container {
            margin-top: 20px;
            width: 100%;
            margin: auto;
            padding: 0%;
        }

        .row {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
        }

        .col-md-4 {
            width: 18%;
            /* Adjusted width to fit 5 cards in one row */
            margin: 10px;
        }

        .card {
            background: white;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            transition: transform 0.3s;
            text-align: center;
        }

        .card:hover {
            transform: scale(1.05);
        }

        .card img {
            width: 100%;
            height: 250px;
            /* Fixed height for equal image size */
            object-fit: cover;
            /* Ensures images don't stretch */
        }

        .card-body {
            padding: 10px;
        }

        @keyframes fadeInCard {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        .navbar {
            width: 100%;
            background: linear-gradient(45deg, #ffcc00, #ff9900);
            padding: 15px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            top: 0;
            left: 0;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            z-index: 999;
        }
        .navbar a {
            text-decoration: none;
            color: black;
            font-size: 18px;
            font-weight: bold;
            margin-right: 20px;
            transition: 0.3s ease;
        }
        .navbar a:hover {
            color: #fff;
            text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.2);
        }

    </style>
</head>

